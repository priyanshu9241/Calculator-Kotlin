<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    >

    <EditText
        android:id="@+id/calculation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:focusable="false"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.14"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,DuplicateSpeakableTextCheck,SpUsage,TextFields,TextSizeCheck,VisualLintTextFieldSize"></EditText>


    <EditText
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:focusable="false"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.14"

        app:layout_constraintTop_toBottomOf="@id/calculation"
        tools:ignore="Autofill,SpUsage,TextFields,TextSizeCheck,VisualLintTextFieldSize"></EditText>

    <Button

        android:id="@+id/AC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="4dp"
        android:backgroundTint="@color/light_grey"
        android:text="AC"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintWidth_percent="0.485"
        app:layout_constraintTop_toBottomOf="@+id/result"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/BACKSPACE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/light_grey"
        android:text="BACKSPACE"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle=""
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintWidth_percent="0.485"
        app:layout_constraintLeft_toRightOf="@id/AC"
        app:layout_constraintTop_toBottomOf="@+id/result"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Seven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:textColor="@color/blue"
        android:text="7"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>


    <Button

        android:id="@+id/Eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:text="8"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Seven"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>


    <Button

        android:id="@+id/Nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:text="9"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Eight"
        app:layout_constraintTop_toBottomOf="@id/BACKSPACE"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>


    <Button

        android:id="@+id/Divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue"
        android:text="/"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Nine"
        app:layout_constraintTop_toBottomOf="@id/BACKSPACE"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>


    <Button

        android:id="@+id/Four"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="4"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Seven"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="5"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Four"
        app:layout_constraintTop_toBottomOf="@id/Eight"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>


    <Button

        android:id="@+id/Six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="6"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Five"
        app:layout_constraintTop_toBottomOf="@id/Nine"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/blue"
        android:text="*"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Six"
        app:layout_constraintTop_toBottomOf="@id/Divide"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/One"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="1"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Four"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="2"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/One"
        app:layout_constraintTop_toBottomOf="@id/Five"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="3"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Two"
        app:layout_constraintTop_toBottomOf="@id/Six"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Subtract"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/blue"
        android:text="-"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Three"
        app:layout_constraintTop_toBottomOf="@id/Multiply"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>


    <Button

        android:id="@+id/Decimal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="."
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/One"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/grey"
        android:text="0"
        android:textColor="@color/blue"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Decimal"
        app:layout_constraintTop_toBottomOf="@id/Two"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Equalsto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/light_blue"
        android:text="="
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Zero"
        app:layout_constraintTop_toBottomOf="@id/Three"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

    <Button

        android:id="@+id/Plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/blue"
        android:text="+"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/Equalsto"
        app:layout_constraintTop_toBottomOf="@id/Subtract"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintHeight_percent="0.11"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>